<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- First Section -->
    <TextView
        android:id="@+id/predictieddisease"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Creative UI Example"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/predictieddiseaseDescription1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="This is a creative UI layout with a heading and a little description about it."
        android:textSize="16sp" />

    <!-- Second Section -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/Preventivemeasure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Preventive Measures"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/preventivemeasures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_marginTop="16dp" />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Extra comments"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/extracomments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="16sp" />

</LinearLayout>